{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "swift",
			"args": [
				"build",
				"-debug-info-format=codeview"
			],
			"env": {},
			"cwd": "${workspaceFolder}",
			"disableTaskQueue": true,
			"group": "build",
			"problemMatcher": [],
			"label": "swift: Build",
			"detail": "swift build -debug-info-format=codeview"
		},
		{
			"type": "shell",
			"command": "./copy_debug.bat",
			"cwd": "${workspaceFolder}",
			"group": "build",
			"problemMatcher": [],
			"label": "swift: copy debug files",
		},
		{
    		"label": "Swift: Build & Copy",
      		"dependsOn": ["swift: Build", "swift: copy debug files"],
	  		"dependsOrder": "sequence",
	  		"group": "build"
		}
	]
}